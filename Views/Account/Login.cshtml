                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Emaİl" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola" })
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-6">
                                <div class="checkbox">
                                    <label>@Html.CheckBoxFor(m => m.RememberMe) Benİ Hatırla</label>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-6 text-right-lg">
                                <a class="forgot-password" href="#">Şİfremİ hatırlat</a>
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-theme btn-block btn-theme-dark" href="#">GİrİŞ</a>
                            </div>
                        </div>
                    }
                </div>
